{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "name",
    "version",
    "questions"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "text",
          "type",
          "category"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "type": {
            "enum": [
              "likert",
              "categorical",
              "ordinal"
            ]
          },
          "category": {
            "enum": [
              "opinion",
              "demographic"
            ]
          },
          "scale": {
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "options": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}